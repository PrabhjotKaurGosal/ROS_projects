<?xml version="1.0" encoding="utf-8"?>
<!-- =================================================================================== -->         
<!--   This URDF contains a robot model with Velocity Controllers and various sensors -->
<!--               THis file contains planar_move plugin that moves the robot         -->
<!-- =================================================================================== -->
<robot name="hydra_one">

   <material name="red">
     <color rgba="0.8 0 0 1"/>
   </material>

    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>

  <!-- in kg-->
  <!-- BASE FOOTPRINT -->
  <link name="hydra_one_base_footprint">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <joint name="hydra_one_base_footprint_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.127"/>
    <!-- ${wheel_radius} property must be defined inside wheel description -->
    <parent link="hydra_one_base_footprint"/>
    <child link="hydra_one_base_link"/>
  </joint>

  <!-- BASE_LINK -->
  <link name="hydra_one_base_link">
    <inertial>
      <mass value="125.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1.391" ixy="0.004" ixz="0.0" iyy="6.853" iyz="0.0" izz="6.125"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://hydra_one_description/models/hydra_one/meshes/base/hydra_base_frame.dae"/>
      </geometry>
      <material name="darkgrey">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 0 0 " xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://hydra_one_description/models/hydra_one/meshes/base/hydra_base_frame.dae"/>
      </geometry>
    </collision>
  </link>

  <!-- FRONT_RIGHT_WHEEL_LINK -->
  <link name="hydra_one_front_right_wheel_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://hydra_one_description/models/hydra_one/meshes/wheels/omni_wheel_2.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.087" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="6.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
    </inertial>
  </link>
  <gazebo reference="hydra_one_front_right_wheel_link">
    <mu1 value="1.0"/>
    <mu2 value="1.0"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    <fdir1 value="1 0 0"/>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <!-- FRONT_RIGHT_WHEEL_JOINT -->
  <joint name="hydra_one_front_right_wheel_joint" type="continuous">
    <parent link="hydra_one_base_link"/>
    <child link="hydra_one_front_right_wheel_link"/>
    <origin rpy="0 0 0" xyz="0.2225 -0.2045 0.0"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <!-- Transmission is important to link the joints and the controller -->
  <transmission name="hydra_one_front_right_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="hydra_one_front_right_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="hydra_one_front_right_wheel_joint_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> 

  <!-- FRONT_LEFT_WHEEL_LINK -->
  <link name="hydra_one_front_left_wheel_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://hydra_one_description/models/hydra_one/meshes/wheels/omni_wheel_1.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.087" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="6.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
    </inertial>
  </link>
  <gazebo reference="hydra_one_front_left_wheel_link">
    <mu1 value="1.0"/>
    <mu2 value="1.0"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    <fdir1 value="1 0 0"/>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <joint name="hydra_one_front_left_wheel_joint" type="continuous">
    <parent link="hydra_one_base_link"/>
    <child link="hydra_one_front_left_wheel_link"/>
    <origin rpy="0 0 0" xyz="0.2225 0.2045 0.0"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <!-- Transmission is important to link the joints and the controller -->
  <transmission name="hydra_one_front_left_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="hydra_one_front_left_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="hydra_one_front_left_wheel_joint_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission> 

  <!-- BACK_LEFT_WHEEL_LINK -->
 <link name="hydra_one_back_left_wheel_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://hydra_one_description/models/hydra_one/meshes/wheels/omni_wheel_1.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.087" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="6.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
    </inertial>
  </link>
  <gazebo reference="hydra_one_back_left_wheel_link">
    <mu1 value="1.0"/>
    <mu2 value="1.0"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    <fdir1 value="1 0 0"/>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <joint name="hydra_one_back_left_wheel_joint" type="continuous">
    <parent link="hydra_one_base_link"/>
    <child link="hydra_one_back_left_wheel_link"/>
    <origin rpy="0 0 0" xyz="-0.2225 0.2045 0.0"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
 
  <!-- Transmission is important to link the joints and the controller -->
  <transmission name="hydra_one_back_left_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="hydra_one_back_left_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="hydra_one_back_left_wheel_joint_motor">
