  <!-- BACK_RIGHT_WHEEL_LINK -->
  <link name="hydra_one_back_right_wheel_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://hydra_one_description/models/hydra_one/meshes/wheels/omni_wheel_2.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.57079632679 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.087" radius="0.127"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="6.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0303095" ixy="0" ixz="0" iyy="0.05241925" iyz="0" izz="0.0303095"/>
    </inertial>
  </link>
  <gazebo reference="hydra_one_back_right_wheel_link">
    <mu1 value="1.0"/>
    <mu2 value="1.0"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    <fdir1 value="1 0 0"/>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>

  <joint name="hydra_one_back_right_wheel_joint" type="continuous">
    <parent link="hydra_one_base_link"/>
    <child link="hydra_one_back_right_wheel_link"/>
    <origin rpy="0 0 0" xyz="-0.2225 -0.2045 0.0"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <!-- Transmission is important to link the joints and the controller -->
  <transmission name="hydra_one_back_right_wheel_joint_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="hydra_one_back_right_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="hydra_one_back_right_wheel_joint_motor">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

<!-- Default plugin that parses the transmission tags and loads the appropriate hardware interfaces and controller manager 
<gazebo>
  <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
     <robotNamespace>/hydra_one</robotNamespace>
  </plugin>
</gazebo> -->

  <gazebo>
    <plugin filename="libgazebo_ros_planar_move.so" name="omni_steering">
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometryRate>50.0</odometryRate>
      <robotBaseFrame>hydra_one_base_footprint</robotBaseFrame>
      <publishTF>true</publishTF>
    </plugin>
  </gazebo>

<!-- Front lower camera -->
<!-- Reference: http://gazebosim.org/tutorials?tut=ros_gzplugins -->
<!-- Define link, joint, gazebo reference for the link,  and Gazebo plugin for the camera -->
 <link name="front_lower_camera_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="1.6e-5" ixy="0.0" ixz="0.0" iyy="1.6e-5" iyz="0.0" izz="1.6e-5"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size= "0.05 0.05 0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
    <gazebo reference="front_lower_camera_link">
        <material>Gazebo/Red</material>
    </gazebo>
  <joint name="front_lower_camera_joint" type="fixed">
    <parent link="hydra_one_base_link"/>
    <child link="front_lower_camera_link"/>
    <origin xyz="0.23158 0.001881 0.42053" rpy="0 0 0"/>
  </joint>

<!-- gazebo reference and plugin for the camera -->
  <gazebo reference="front_lower_camera_link">
    <sensor type="camera" name="front_lower_camera_sensor">
      <update_rate>30.0</update_rate>
      <camera name="front_lower_camera">
        <pose> 0 0 0 0 0 0 </pose>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="front_lower_camera_controller" filename="libgazebo_ros_camera.so">
        <alwaysOn>false</alwaysOn>
        <updateRate>0.0</updateRate>
        <cameraName>/hydra_one/front_lower_camera_sensor</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>/hydra_one/front_lower_camera_info</cameraInfoTopicName>
        <frameName>front_lower_camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
    </sensor>
  </gazebo>

<!-- front laser link -->
<!-- Define link, joint, gazebo reference for the link,  and Gazebo plugin for the laser -->
  <link name="center_laser_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="6.93e-05" ixy="0.0" ixz="0.0" iyy="6.93e-05" iyz="0.0" izz="7.2e-05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.05"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
    <gazebo reference="center_laser_link">
        <material>Gazebo/Red</material>
    </gazebo>
  <joint name="center_laser_joint" type="fixed">
    <parent link="hydra_one_base_link"/>
    <child link="center_laser_link"/>
    <origin xyz="0.23158 0.001881 0.55275" rpy="0 0 0"/>
  </joint>

<!-- gazebo reference and the plugin -->
  <gazebo reference="center_laser_link">
    <sensor name='center_laser_sensor' type='ray'>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
          <!--<vertical>
            <samples>16</samples>
            <min_angle>-0.1</min_angle>
            <max_angle>-0.35</max_angle>
          </vertical> -->
        </scan>
        <range>
          <min>0.0</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name='center_laser_controller' filename='libgazebo_ros_laser.so'>
        <topicName>/hydra_one/laser/scan</topicName>
        <frameName>center_laser_link</frameName>
      </plugin>
      <always_on>1</always_on>
      <update_rate>40</update_rate>
      <visualize>1</visualize>
    </sensor>
  </gazebo>

<!-- front depth_sensor link -->
<!-- Define link, joint, gazebo reference for the link,  and Gazebo plugin for the laser -->
  <link name="front_depth_sensor_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="6.93e-05" ixy="0.0" ixz="0.0" iyy="6.93e-05" iyz="0.0" izz="7.2e-05"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size= "0.03 0.16 0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>
    <gazebo reference="front_depth_sensor_link">
        <material>Gazebo/Black</material>
    </gazebo>
  <joint name="front_depth_sensor_joint" type="fixed">
    <parent link="hydra_one_base_link"/>
    <child link="front_depth_sensor_link"/>
    <origin xyz="0.40000 0.001881 0.2999" rpy="0 0 0"/>
  </joint>

<gazebo reference="front_depth_sensor_link">
  <sensor name="front_depth_sensor_camera" type="depth">
    <update_rate>20</update_rate>
    <camera>
      <horizontal_fov>1.047198</horizontal_fov>
      <image>
        <width>640</width>
        <height>480</height>
        <format>R8G8B8</format>
      </image>
      <clip>
        <near>0.05</near>
        <far>3</far>
      </clip>
    </camera>
    <plugin name="front_depth_sensor_controller" filename="libgazebo_ros_openni_kinect.so">
      <baseline>0.2</baseline>
      <alwaysOn>true</alwaysOn>
      <updateRate>1.0</updateRate>
      <cameraName>/hydra_one/front_depth_sensor_camera_ir</cameraName>
      <imageTopicName>hydra_one/front_depth_sensor_camera/color/image_raw</imageTopicName>
      <cameraInfoTopicName>/hydra_one/front_depth_sensor_camera/color/camera_info</cameraInfoTopicName>
      <depthImageTopicName>hydra_one/front_depth_sensor_camera/depth/image_raw</depthImageTopicName>
      <depthImageInfoTopicName>hydra_one/front_depth_sensor_camera/depth/camera_info</depthImageInfoTopicName>
      <pointCloudTopicName>hydra_one/front_depth_sensor_camera/depth/points</pointCloudTopicName>
      <frameName>front_depth_sensor_link</frameName>
      <pointCloudCutoff>0.5</pointCloudCutoff>
      <pointCloudCutoffMax>3.0</pointCloudCutoffMax>
      <distortionK1>0.00000001</distortionK1>
      <distortionK2>0.00000001</distortionK2>
      <distortionK3>0.00000001</distortionK3>
      <distortionT1>0.00000001</distortionT1>
      <distortionT2>0.00000001</distortionT2>
      <CxPrime>0</CxPrime>
      <Cx>0</Cx>
      <Cy>0</Cy>
      <focalLength>0</focalLength>
      <hackBaseline>0</hackBaseline>
    </plugin>
  </sensor>
</gazebo>

  <gazebo>
    <plugin name="p3d" filename="libgazebo_ros_p3d.so">
      <!-- <robotNamespace>/hydra_one</robotNamespace> -->
      <bodyName>hydra_one_base_footprint</bodyName>
      <topicName>base_pose_ground_truth</topicName>
      <frameName>map</frameName>
      <updateRate>100.0</updateRate>
    </plugin>
  </gazebo>


</robot>

